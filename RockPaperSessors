<body>
    <div class="game-container">
        <h1>üéÆ Rock Paper Scissors üéÆ</h1>
        
        <div class="score-board">
            <div class="score">
                <h3>You</h3>
                <div class="score-value" id="playerScore">0</div>
            </div>
            <div class="score">
                <h3>Computer</h3>
                <div class="score-value" id="computerScore">0</div>
            </div>
        </div>

        <div class="game-area">
            <div class="choices">
                <button class="choice-btn rock" onclick="playGame('rock')">ü™®</button>
                <button class="choice-btn paper" onclick="playGame('paper')">üìÑ</button>
                <button class="choice-btn scissors" onclick="playGame('scissors')">‚úÇ</button>
            </div>

            <div class="result-display" id="resultDisplay">
                <div class="round-result">Choose your weapon!</div>
                <div class="choices-made">Click on Rock, Paper, or Scissors to start playing</div>
            </div>
        </div>

        <button class="reset-btn" onclick="resetGame()">üîÑ Reset Game</button>

        <div class="game-instructions">
            <strong>How to Play:</strong><br>
            ü™® Rock beats Scissors<br>
            üìÑ Paper beats Rock<br>
            ‚úÇ Scissors beats Paper<br>
            <br>
            First to win is the champion! üèÜ
        </div>
    </div>

    <script>
        let playerScore = 0;
        let computerScore = 0;
        
        const choices = ['rock', 'paper', 'scissors'];
        const emojis = {
            rock: 'ü™®',
            paper: 'üìÑ',
            scissors: '‚úÇ'
        };

        function playGame(playerChoice) {
            const computerChoice = choices[Math.floor(Math.random() * 3)];
            const result = determineWinner(playerChoice, computerChoice);
            
            updateScore(result);
            displayResult(playerChoice, computerChoice, result);
        }

        function determineWinner(player, computer) {
            if (player === computer) {
                return 'tie';
            }
            
            if (
                (player === 'rock' && computer === 'scissors') ||
                (player === 'paper' && computer === 'rock') ||
                (player === 'scissors' && computer === 'paper')
            ) {
                return 'win';
            } else {
                return 'lose';
            }
        }

        function updateScore(result) {
            if (result === 'win') {
                playerScore++;
                document.getElementById('playerScore').textContent = playerScore;
            } else if (result === 'lose') {
                computerScore++;
                document.getElementById('computerScore').textContent = computerScore;
            }
        }

        function displayResult(playerChoice, computerChoice, result) {
            const resultDisplay = document.getElementById('resultDisplay');
            
            let resultMessage = '';
            let choicesMessage = You: ${emojis[playerChoice]} vs Computer: ${emojis[computerChoice]};
            
            switch(result) {
                case 'win':
                    resultMessage = 'üéâ You Win!';
                    resultDisplay.querySelector('.round-result').className = 'round-result win';
                    break;
                case 'lose':
                    resultMessage = 'üíî You Lose!';
                    resultDisplay.querySelector('.round-result').className = 'round-result lose';
                    break;
                case 'tie':
                    resultMessage = 'ü§ù It\'s a Tie!';
                    resultDisplay.querySelector('.round-result').className = 'round-result tie';
                    break;
            }
            
            resultDisplay.querySelector('.round-result').textContent = resultMessage;
            resultDisplay.querySelector('.choices-made').textContent = choicesMessage;
        }

        function resetGame() {
            playerScore = 0;
            computerScore = 0;
            document.getElementById('playerScore').textContent = '0';
            document.getElementById('computerScore').textContent = '0';
            
            const resultDisplay = document.getElementById('resultDisplay');
            resultDisplay.querySelector('.round-result').textContent = 'Choose your weapon!';
            resultDisplay.querySelector('.round-result').className = 'round-result';
            resultDisplay.querySelector('.choices-made').textContent = 'Click on Rock, Paper, or Scissors to start playing';
        }

        // Add keyboard support
        document.addEventListener('keydown', function(event) {
            switch(event.key.toLowerCase()) {
                case 'r':
                    playGame('rock');
                    break;
                case 'p':
                    playGame('paper');
                    break;
                case 's':
                    playGame('scissors');
                    break;
                case ' ':
                    resetGame();
                    break;
            }
        });
    </script>
</body>
